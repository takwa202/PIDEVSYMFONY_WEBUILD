                <td>{{ commande_web.destination }}</td>
                <td>
                    <a href="{{ path('app_commande_web_show', {'idComd': commande_web.idComd}) }}">show</a>
                    <a href="{{ path('app_commande_web_edit', {'idComd': commande_web.idComd}) }}">edit</a>
