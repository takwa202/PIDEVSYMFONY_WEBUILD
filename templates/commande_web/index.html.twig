    <table class="table">
        <thead>
            <tr>
                <th>IdComd</th>
                <th>Nom Produit</th>
                <th>Quantite</th>
                <th>Destination</th>
                <th>DateComd</th>
                <th>Nom</th>
                <th>Prenom</th>
