{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPatient</th>
                <th>NomPatient</th>
                <th>PrénomPatient</th>
                <th>EmailPatient</th>
                <th>AdressPatient</th>
                <th>NumtelPatient</th>
                <th>MotdepasselPatient</th>
                <th>AgePatient</th>
                <th>GendrePatient</th>
                <th>Isblokedpatient</th>
                <th>NbRdv</th>
                <th>NbAchat</th>
                <th>NbReclamation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.idPatient }}</td>
                <td>{{ patient.nomPatient }}</td>
                <td>{{ patient.prénomPatient }}</td>
                <td>{{ patient.emailPatient }}</td>
                <td>{{ patient.adressPatient }}</td>
                <td>{{ patient.numtelPatient }}</td>
                <td>{{ patient.motdepasselPatient }}</td>
                <td>{{ patient.agePatient }}</td>
                <td>{{ patient.gendrePatient }}</td>
                <td>{{ patient.isblokedpatient ? 'Yes' : 'No' }}</td>
                <td>{{ patient.nbRdv }}</td>
                <td>{{ patient.nbAchat }}</td>
                <td>{{ patient.nbReclamation }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'idPatient': patient.idPatient}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'idPatient': patient.idPatient}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
